{
  "name": "express-mongo-mocha-boilerplate",
  "version": "1.0.0",
  "description": "This is a full stack boilerplate project with ExpressJS + MongoDB + Mocha",
  "scripts": {
    "start": "nodemon ./server.js --ignore public/ --exec babel-node --presets env",
    "build": "babel . -d dist --presets es2015,stage-2 --ignore spec.js,node_modules",
    "serve": "node dist/server.js",
    "start_babel": "babel-node ./server.js --preset=babel-preset-es2015",
    "test": "mocha --compilers js:babel-core/register ./tests --recursive",
    "lint": "eslint .",
    "api-designer": "api-designer --port 4000",
    "apidoc": "node /doc/doc-script.js doc"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ul2002/express-mongo-mocha-boilerplate.git"
  },
  "keywords": [
    "Node.js",
    "Javascript",
    "Express",
    "Mocha"
  ],
  "author": "Ulrich Ntela <ulrichsoft2002@gmail.com>",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.15.2",
    "cors": "^2.8.0",
    "custom-translate": "^2.2.8",
    "dotenv": "^6.0.0",
    "express": "4.14.0",
    "express-fileupload": "^1.0.0",
    "global": "^4.3.2",
    "json-stringify-safe": "^5.0.1",
    "jwt-simple": "^0.5.3",
    "lodash": "^4.15.0",
    "moment": "^2.22.2",
    "mongoose": "^4.7.1",
    "morgan": "^1.8.2",
    "multer": "^1.4.1",
    "passport": "^0.4.0",
    "passport-jwt": "^2.2.1",
    "socket.io": "^2.1.1",
    "translate": "^1.0.3",
    "uninstall": "0.0.0",
    "winston": "^2.3.1",
    "winston-daily-rotate-file": "^1.4.6"
  },
  "devDependencies": {
    "api-designer": "^0.4.1",
    "apidoc": "^0.17.6",
    "babel-cli": "^6.16.0",
    "babel-core": "^6.17.0",
    "babel-eslint": "^7.0.0",
    "babel-plugin-inline-import": "^2.0.1",
    "babel-plugin-transform-async-to-module-method": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-polyfill": "^6.16.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-es2015": "^6.16.0",
    "babel-preset-react": "^6.5.0",
    "babel-preset-stage-0": "^6.16.0",
    "babel-runtime": "^6.26.0",
    "chai": "^4.2.0",
    "eslint": "^3.19.0",
    "eslint-config-airbnb": "^12.0.0",
    "eslint-plugin-import": "^2.0.1",
    "eslint-plugin-react": "^6.4.1",
    "mocha": "^5.2.0",
    "nodemon": "^1.9.1",
    "raml2html": "^7.2.1",
    "ws": "3.3.2"
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": [
      "airbnb/base",
      "plugin:import/errors"
    ],
    "rules": {
      "no-use-before-define": 0,
      "arrow-body-style": 0,
      "dot-notation": 0,
      "no-console": 0,
      "new-cap": 0,
      "no-trailing-spaces": 0,
      "no-param-reassign": 0
    },
    "env": {
      "mocha": true
    }
  },
  "babel": {
    "presets": [
      "env"
    ],
    "plugins": [
      [
        "transform-object-rest-spread",
        "transform-runtime",
        {
          "polyfill": true,
          "regenerator": true
        }
      ]
    ]
  }
}
